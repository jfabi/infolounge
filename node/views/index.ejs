<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <!-- STYLESHEETS -->
    <link rel='stylesheet' href='/stylesheets/reset.css' />
    <link rel='stylesheet' href='/plugins/foundation/css/foundation.css' />
    <link rel='stylesheet' href='/stylesheets/style2.css' />

    <!-- FONTS -->
    <link href='http://fonts.googleapis.com/css?family=Roboto:400,100,100italic,300,300italic,500,400italic,500italic,700,700italic,900,900italic' rel='stylesheet' type='text/css'>

    <!-- JAVASCRIPT -->
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
    <script src="http://tweet.seaofclouds.com/jquery.tweet.js" charset="utf-8"></script>
    <script type="text/javascript" src="/javascripts/jquery.simpleWeather.js" charset="utf-8"></script>
    <script src="/javascripts/dateformat.js"></script>
    <script src="/javascripts/weather.js"></script>
    <script src="/javascripts/tech.js"></script>
    <script src="/javascripts/menu.js"></script>
    <script src="/javascripts/news.js"></script>
    <script src="/javascripts/fancy.js"></script>
  	
<script type='text/javascript'>
    lastUpdated = -1;
    $(document).ready(function(){

      $(function($){
        $("#tweet_feed").tweet({
          count: 7,
          avatar_size: 48,
          query: "#bash3w",
          loading_text: "searching twitter...",
          refresh_interval: 60
        });
      });

      // Update the time
      window.setInterval(function() {
          now = new Date();
          document.getElementById('clock').innerHTML=dateFormat(now, 'h:MM "<span class=\'ampm\'>"TT"</span>"');

          if (now.getMinutes() != lastUpdated) {
              lastUpdated = now.getMinutes();

              getWeather();
              getPredictions();
              getMenu();
              getNews();
              getFancy();
          }
      }, 1000);

      $("#weatherbanner").delay(500).slideDown("slow");
      $("#tweetpanel").delay(600).slideDown("slow");

    });
</script>

  </head>
  <body>
  	<div id='content'>
      <div class="row">
        <div class="large-6 columns">
          <div id='header'>
              <h1>infolounge</h1>
              <h2>beta v2.1</h2>
          </div>
        </div>
        <div class="large-6 columns">
            <div id='clock'></div>
        </div>
      </div>
      <!--
      <div id='weatherbanner' class='banner'>
          <div id="weather"></div>
      </div>
      -->
      <div class="row">
        <div class="large-7 columns">
          <h3 class='twitter-header'>Twitter</h3>
          <div id='tweetpanel' class='panel'>
              <div id='tweet_feed'></div>
          </div>
        </div>
        <div class="large-5 columns">



          <div class="row">
            <div class="large-12 columns">
              <h3 class="date-header">Today</h3>
              <div id='datepanel' class='panel' style="display: block;">
                  <div id="date">
                    Friday, June 4
                    <div class="subdate">
                      happy birthday, becky
                    </div>
                  </div>
              </div>
            </div>
          </div>

          <div class="row">
            <div class="large-12 columns">
              <h3 class='techshuttle-header'>Tech Shuttle</h3>
              <div id='techpanel' class='panel'>
                <ul id="predictions"></ul>
              </div>
            </div>  
          </div>

          <div class="row">
            <div class="large-12 columns">
              <h3 class='fancy-header'>Fancy</h3>
              <div id='fancypanel' class='panel'>
                <div id="fancy"></div>
              </div>
            </div>  
          </div>

        </div>
        <!--
        <div id='' class='panel'>
            <h3>Time</h3>
            <div>Clock</div>
        </div>
        <div id='menupanel' class='panel'>
            <h3>Menu</h3>
            <ul id="menu"></ul>
        </div>
          <div class="row">
            <div class="large-12 columns">
              <div id='newspanel' class='panel'>
                  <h3>Lounge News</h3>
                  <div id="news"></div>
              </div>
            </div>  
          </div>
      -->
      </div>
    </div>
  </body>
</html>
